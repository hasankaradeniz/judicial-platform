    """
    return render(request, 'core/predictive_legal_analysis.html')

def mevzuat_pdf_view(request):
    """
    Mevzuat PDF'ini sistemimizdeki iframe'de gÃ¶ster
    """
    import requests
    from django.http import HttpResponse, Http404
    from .pdf_proxy_service import PDFProxyService
    
    # URL parametrelerini al
    mevzuat_no = request.GET.get('MevzuatNo', '')
    mevzuat_tur = request.GET.get('MevzuatTur', '1')
    mevzuat_tertip = request.GET.get('MevzuatTertip', '5')
    
    if not mevzuat_no:
        raise Http404("Mevzuat numarasÄ± belirtilmedi")
    
    # Mevzuat.gov.tr URL'ini oluÅŸtur
    mevzuat_url = f"https://www.mevzuat.gov.tr/mevzuat?MevzuatNo={mevzuat_no}&MevzuatTur={mevzuat_tur}&MevzuatTertip={mevzuat_tertip}"
    
    try:
        # Mevzuat sayfasÄ±nÄ± al ve PDF linkini bul
        response = requests.get(mevzuat_url, timeout=10)
        
        if response.status_code == 200:
            from bs4 import BeautifulSoup
            soup = BeautifulSoup(response.content, 'html.parser')
            
            # PDF linkini ara
            pdf_links = soup.find_all('a', href=lambda x: x and '.pdf' in x)
            
            if pdf_links:
                pdf_url = pdf_links[0]['href']
                if pdf_url.startswith('/'):
                    pdf_url = 'https://www.mevzuat.gov.tr' + pdf_url
                
                # PDF proxy servisi ile PDF'i gÃ¶ster
                pdf_service = PDFProxyService()
                title = f"Mevzuat No: {mevzuat_no}"
                return pdf_service.get_pdf_response(pdf_url, title)
        
        # PDF bulunamazsa, iframe ile doÄŸrudan sayfayÄ± gÃ¶ster
        iframe_html = f"""
        <!DOCTYPE html>
        <html>
        <head>
            <title>Mevzuat No: {mevzuat_no}</title>
            <style>
                body {{ margin: 0; padding: 0; }}
                iframe {{ width: 100%; height: 100vh; border: none; }}
                .header {{ background: #1e5b8e; color: white; padding: 10px; text-align: center; }}
            </style>
        </head>
        <body>
            <div class="header">
                <h3>Mevzuat No: {mevzuat_no} - Lexatech Hukuk Platformu</h3>
            </div>
            <iframe src="{mevzuat_url}" title="Mevzuat Metni"></iframe>
        </body>
        </html>
        """
        
        return HttpResponse(iframe_html, content_type='text/html')
        
    except Exception as e:
        # Hata durumunda basit hata sayfasÄ±
        error_html = f"""
        <!DOCTYPE html>
        <html>
        <head>
            <title>Hata - Mevzuat YÃ¼klenemedi</title>
            <style>
                body {{ font-family: Arial, sans-serif; margin: 20px; }}
                .error {{ color: red; padding: 20px; border: 1px solid red; background: #ffe6e6; }}
                .link {{ margin-top: 20px; }}
                a {{ color: #1e5b8e; text-decoration: none; }}
                a:hover {{ text-decoration: underline; }}
            </style>
        </head>
        <body>
            <div class="error">
                <h2>Mevzuat YÃ¼klenemedi</h2>
                <p>Mevzuat metni ÅŸu anda yÃ¼klenemiyor. LÃ¼tfen daha sonra tekrar deneyiniz.</p>
                <p><strong>Hata:</strong> {str(e)}</p>
            </div>
            <div class="link">
                <p><a href="{mevzuat_url}" target="_blank">Mevzuat.gov.tr'de doÄŸrudan gÃ¶rÃ¼ntÃ¼le</a></p>
                <p><a href="/legislation/">Mevzuat arama sayfasÄ±na geri dÃ¶n</a></p>
            </div>
        </body>
        </html>
        """
        
        return HttpResponse(error_html, content_type='text/html', status=500)


